        $('#TblBloglar tbody').on('click', '.blogSil', function () {
            var sonuc = confirm("Kayıt Silinsin Mi ?");
            if (sonuc) {
                var blogId = $(this).data("blogid");
                $.ajax({
                    type: "POST",
                    url: "/Admin/BlogSil/" + blogId,
                    success: function () {
                        alert("Kayıt Silindi");
                        window.location.replace("Admin/Index");
                    },
                    error: function () {
                        alert("Kayıt Sırasında Hata Oluştu !");
