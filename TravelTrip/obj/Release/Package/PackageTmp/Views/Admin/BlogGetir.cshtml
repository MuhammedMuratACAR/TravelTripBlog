@model TravelTrip.Models.Siniflar.Blog

@{

    Layout = null;
}
<script src="https://code.jquery.com/jquery-3.5.0.js"></script>
@using (Html.BeginForm("BlogGuncelle", "Admin", FormMethod.Post))
{
    @Html.LabelFor(x => x.ID)
    @Html.TextBoxFor(x => x.ID, new { @class = "form-control",@readonly="readonly"})
    <br />
    @Html.LabelFor(x => x.Baslik)
    @Html.TextBoxFor(x => x.Baslik, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Tarih)
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", @Value = Model.Tarih.ToString("dd.MM.yyyy"), @id = "textTarih" })
    @Html.TextBoxFor(x => x.Tarih, new { @class = "form-control", @id = "dateTarih", @style = ("display:none") })
    <br />
    @Html.LabelFor(x => x.BlogImage)
    @Html.TextBoxFor(x => x.BlogImage, new { @class = "form-control" })
    <br />
    @Html.LabelFor(x => x.Aciklama)
    @Html.TextAreaFor(x => x.Aciklama,6,1, new { @class = "form-control" })
    <br />
    <button class="btn btn-success" id="dd">Blog Güncelle</button>
}


@section scripts{


    <script src="~/Scripts/jquery-3.5.1.min.js"></script>

    <script>
        $("#textTarih").focus(function () {
            alert("dasdasd");
            $("#textTarih").css({ "display": "none" });
            $("#dateTarih").css({ "display": "block" });
        });
    </script>

}




